
{{>header}}

{{!-- 导航栏 --}}
<div class="container-fluid" id="breadcrumb">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">首页</a></li>
            <li class="breadcrumb-item active" aria-current="page">安省Covid-19疫情动态</li>
        </ol>
    </nav>
</div>

<div class="container-fluid" id="council">
    <div class="row justify-content-center">
        <div class="col col-md-9 py-3 table-responsive">
            <h1 class="text-center">安省Covid-19疫情动态</h1>
            <table class="table table-hover table-bordered text-center">
                <caption></caption>
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">New Cases</th>
                        <th scope="col">Comfirmed Positive</th>
                        <th scope="col">Resolved</th>
                        <th scope="col">Deeaths</th>
                        <th scope="col">Total Cases</th>
                    </tr>
                </thead>
                <tbody>
                    {{# records}}
                    <tr>
                        <td>{{'Reported Date'}}</td>
                        <td class="text-danger font-weight-bold">{{new_cases}}</td>
                        <td>{{'Confirmed Positive'}}</td>
                        <td>{{Resolved}}</td>
                        <td>{{Deaths}}</td>
                        <td>{{'Total Cases'}}</td>
                    </tr>
                    {{/ records}}
                </tbody>
            </table>
        </div>

        <div class="w-100"></div>

        <!-- <div class="col col-md-9 mb-5">
            <img src="/img/council.png" class="w-100" alt="深大安省校友会理事会">
        </div> -->

    </div>

</div>

<script>
    $('title').html('深圳大学安省校友会-理事会');
</script>
{{>footer}}  
