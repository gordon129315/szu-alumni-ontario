{{>header}}

{{!-- carousel slide 图片尺寸比例3:2--}}
<div class="container-fluid" id="carousel">
    <div id="carousel-headline-news" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {{# headline_news}}
            <li data-target="#carousel-headline-news"></li>
            {{/ headline_news}}
        </ol>
        <div class="carousel-inner">
            {{# headline_news}}
            <div class="carousel-item">
                <div class="row">
                    <div class="col-md-4 carousel-words-box">
                        <div class="carousel-words">
                            <h3>{{heandline}}</h3>
                            {{# subtitle}}
                            <p>{{content}}</p>
                            {{/ subtitle}}
                            {{#if footer}}
                            <blockquote class="blockquote text-right">
                                <footer class="blockquote-footer">{{footer}}</footer>
                            </blockquote> 
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-md-8 carousel-img">
                        <img class="w-100" src="{{image}}">
                    </div>
                </div>
            </div>
            {{/ headline_news}}
        </div>
        <a class="carousel-control-prev" href="#carousel-headline-news" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-headline-news" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

{{!-- features --}}
<div class="container-fluid" id="features">
    <div class="row w-75 mx-auto mb-3">
        <div class="col-md-4 mt-5">
            <div class="mx-auto text-center">
                <a href="/enterprise" class="d-flex flex-column">
                    <i class="far fa-building fa-7x"></i>
                    <p>校友企业</p>
                </a>
            </div>
        </div>
        <div class="col-md-4 mt-5">
            <div class="mx-auto text-center">
                <a href="/sport-teams" class="d-flex flex-column">
                    <i class="fas fa-dumbbell fa-7x"></i>
                    <p>文娱队伍</p>
                </a>
            </div>
        </div>
        <div class="col-md-4 mt-5">
            <div class="mx-auto text-center">
                <a href="/events" class="d-flex flex-column">
                    <i class="far fa-newspaper fa-7x"></i>
                    <p>活动动态</p>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    $('.carousel-indicators').children('li:nth-child(1)').addClass( "active" );
    $('.carousel-inner').children('.carousel-item:nth-child(1)').addClass( "active" );
</script>

{{>footer}}

