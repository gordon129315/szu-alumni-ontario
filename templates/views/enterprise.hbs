
{{>header}}

{{!-- 导航栏 --}}
<div class="container-fluid" id="breadcrumb">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">首页</a></li>
            <li class="breadcrumb-item active" aria-current="page">校友企业</li>
        </ol>
    </nav>
</div>

{{!-- 校友企业 --}}
<div class="container-fluid" id="enterprise">
    <div class="border border-danger rounded w-100 p-3">
        <span class="text-danger">*预定广告位，请联系校友理事会</span>
    </div>

    {{!-- 分类 --}}
    <h2 class="text-center mb-3 mt-5 theme-color"><b>企业分类</b></h2>
    <div id="category" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-start mx-auto my-3">
        {{# enterprise_list}}
        <div class="col mb-4">
            <div class="card h-100">
                <div class="w-100 card-body"><i class="{{icon}} theme-color"></i></div>
                <div class="card-footer text-center">
                    <a href="#" class="stretched-link" data-target="#{{id}}">
                        <h5 class="card-title mb-0">{{category}}</h5>
                    </a>
                </div>
            </div>
        </div>
        {{/ enterprise_list}}
    </div>

    {{# enterprise_list}}
    <h2 id="{{id}}" class="text-center mb-3 mt-5 theme-color"><b>{{category}}</b></h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-start mx-auto my-3">
        {{# enterprise}}
        <div class="col px-md-2 mb-4">
            <div class="card h-100">
                <div class="w-100">
                    <div id="{{id}}" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {{# logo}}
                            <div class="carousel-item">
                                <img src="{{logo-link}}" class="card-img-top">
                            </div>
                            {{/ logo}}
                        </div>
                        <a class="carousel-control-prev" href="#{{id}}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#{{id}}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{enterprise-name}}</h5>
                    {{# info}}
                    <p class="card-text my-0">{{content}}</p>
                    {{/ info}}
                    {{#if website}}
                    <a href="{{website}}" class="mt-auto" target="_blank"><u>公司链接 >></u></a>
                    {{/if}}
                </div>
                <div class="card-footer text-right">
                    <small class="text-muted d-block">{{name}}</small>
                    <small class="text-muted d-block">{{title}}</small>
                </div>
            </div>
        </div>
        {{/ enterprise}}
    </div>
    {{/ enterprise_list}}


</div> 

{{>footer}}  

<script>

    $('.carousel-inner').children('.carousel-item:nth-child(1)').addClass( "active" );

    $('#category .card').on('click', (e) => {
        let destination = e.target.getAttribute('data-target');
        $("html,body").animate({scrollTop: $(destination).offset().top}, 500);
    })
</script>